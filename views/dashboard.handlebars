<section class="mt-3 d-flex align-items-center justify-content-around text-center">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="input-group mb-3">
      <label class="input-group-text" for="post-title">Title</label>
      <input class="form-control" placeholder="Enter Title Here" type="text" id="post-title" name="post-title" />
    </div>

    <div class="input-group mb-3">
      <label class="input-group-text" for="post-body">Post</label>
      <textarea class="form-control" placeholder="Enter Post Here" id="post-body" name="post-body"></textarea>
    </div>

    <button type="submit" class="btn btn-info">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>

  <ul class="list-unstyled">
    {{#each posts as |post|}}
    <li class="border m-2 rounded-pill border-light text-center">
      {{> post-info post}}
      <a class="text-info" href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>