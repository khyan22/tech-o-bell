<section class="mt-3 d-flex align-items-center justify-content-around text-center">
  <h2>Login</h2>
  
  <form class="login-form">
    <div class="input-group mb-3">
      <label class="input-group-text" for="email-login">Email:</label>
      <input class="form-control" placeholder="Enter Email Here" type="text" id="email-login"/>
    </div>

    <div class="input-group mb-3">
      <label class="input-group-text" for="password-login">Password:</label>
      <input class="form-control" placeholder="Enter Password Here" type="password" id="password-login"/>
    </div>

    <div>
      <button type="submit" class="btn btn-info">Login</button>
    </div>
  </form>
</section>
<script src="/javascript/login.js"></script>