<section class="mt-3 d-flex align-items-center justify-content-around text-center">
  <h2>Sign Up</h2>
  
  <form class="signup-form">
    <div class="input-group mb-3">
      <label class="input-group-text" for="username-signup">Username:</label>
      <input class="form-control" placeholder="Enter Username Here" type="text" id="username-signup"/>
    </div>

    <div class="input-group mb-3">
      <label class="input-group-text" for="email-signup">Email:</label>
      <input class="form-control" placeholder="Enter Email Here" type="text" id="email-signup"/>
    </div>

    <div class="input-group mb-3" >
      <label class="input-group-text" for="password-signup">Password:</label>
      <input class="form-control" placeholder="Enter Password Here" type="password" id="password-signup"/>
    </div>

    <div>
      <button type="submit" class="btn btn-info">Signup</button>
    </div>
  </form>
</section>
<script src="/javascript/signup.js"></script>